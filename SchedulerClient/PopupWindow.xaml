<Window x:Class="SchedulerClient.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PopupWindow" Height="150" Width="350" AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Border Style="{StaticResource WindowStyle}" Width="300" Height="100" x:Name="Root">
        <TextBlock Width="300" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF2267b0" FontSize="14" x:Name="Message">
            Text
        </TextBlock>
    </Border>
</Window>
