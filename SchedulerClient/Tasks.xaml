<UserControl x:Class="SchedulerClient.Tasks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:SchedulerClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400" Background="Transparent">
    <Canvas>
        <c:TaskItemsControl Height="*" Width="400">
            <c:TaskItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Canvas.Top="10" Width="380" Height="*" Style="{StaticResource TaskCanvas}" Opacity="0.75">
                        <Canvas Background="Transparent" Height="*">
                            <TextBlock HorizontalAlignment="Center" Canvas.Top="2" Height="22" FontWeight="Bold" Text="{Binding Title}"/>
                            <TextBlock Canvas.Top="24" Height="22" Canvas.Left="2" Text="{Binding StartTimeDate}" />
                            <TextBlock Canvas.Top="46" Canvas.Left="2" Text="{Binding EndDateTime}" />
                        </Canvas>
                    </Border>
                </DataTemplate>
            </c:TaskItemsControl.ItemTemplate>
        </c:TaskItemsControl>
    </Canvas>
</UserControl>
